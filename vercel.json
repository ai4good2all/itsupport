# vercel.json
{
  "version": 2,
  "builds": [
    { "src": "api/chat.js", "use": "@vercel/node" },
    { "src": "public/index.html", "use": "@vercel/static" },
    { "src": "src/main.js", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/chat", "dest": "/api/chat.js" },
    { "src": "/src/main.js", "dest": "/src/main.js" },
    { "src": "/(.*)", "dest": "/public/index.html" }
  ]
}
